{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
